string genderRead(uchar &gend) {
    string s;
    if ( gend == 0 )
        SPrintf(s, "%s", "male");
    else if ( gend == 1 )
        SPrintf(s, "%s", "female");
    else if ( gend == 0xFF )
        SPrintf(s, "%s", "by default");
    return s;
}

