           uchar secSkillID;
           uchar secSkillLevel;
           break;
       case 8:
           ushort artID;
           break;
       case 9:
           uchar spellID;
           break;
       case 10:
           ushort creatureID;
           ushort creatureQuantity;
           break;
    };

    char junk[2];
};

